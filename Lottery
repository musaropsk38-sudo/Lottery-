<body>

<h1>üéâ Professional Lottery Demo üéâ</h1>

<div class="container">

  <input type="text" id="name" placeholder="Enter your name">
  <button onclick="buyTicket()">Buy Ticket</button>

  <p><b>Total Players:</b> <span id="count">0</span></p>

  <h3>üéü Player List</h3>
  <ul id="playerList"></ul>

  <hr>

  <input type="password" id="adminPass" placeholder="Admin Password">
  <button onclick="drawWinner()">Draw Winner</button>

  <h3 id="winner"></h3>

  <h3>üèÜ Winner History</h3>
  <ul id="history"></ul>

  <button onclick="resetGame()">Reset Game</button>

</div>

<script>
let players = [];
let historyList = [];
let adminPassword = "1234"; // change password here

function buyTicket() {
  let name = document.getElementById("name").value;
  if(name === "") {
    alert("Enter name first!");
    return;
  }

  let ticketNumber = Math.floor(Math.random() * 10000);
  players.push({name: name, ticket: ticketNumber});

  let li = document.createElement("li");
  li.textContent = name + " (Ticket: " + ticketNumber + ")";
  document.getElementById("playerList").appendChild(li);

  document.getElementById("count").textContent = players.length;
  document.getElementById("name").value = "";
}

function drawWinner() {
  let pass = document.getElementById("adminPass").value;
  if(pass !== adminPassword) {
    alert("Wrong Admin Password!");
    return;
  }

  if(players.length === 0) {
    alert("No players!");
    return;
  }

  let randomIndex = Math.floor(Math.random() * players.length);
  let winner = players[randomIndex];

  document.getElementById("winner").innerHTML =
    "üèÜ Winner: " + winner.name + " (Ticket: " + winner.ticket + ")";

  historyList.push(winner);

  let li = document.createElement("li");
  li.textContent = winner.name + " (Ticket: " + winner.ticket + ")";
  document.getElementById("history").appendChild(li);

  document.getElementById("adminPass").value = "";
}

function resetGame() {
  players = [];
  historyList = [];
  document.getElementById("playerList").innerHTML = "";
  document.getElementById("history").innerHTML = "";
  document.getElementById("winner").innerHTML = "";
  document.getElementById("count").textContent = "0";
}
</script>

</body>
